{
    "extends": [
        "config:recommended"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true,
        "schedule": [
            "before 4am on monday"
        ],
        "labels": [
            "dependencies",
            "lockfile"
        ]
    },
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "github-actions"
            ],
            "labels": [
                "github-actions",
                "dependencies"
            ]
        },
        {
            "description": "Group ABAP toolchain updates into one PR",
            "matchManagers": [
                "npm"
            ],
            "groupName": "abaplint toolchain",
            "groupSlug": "abaplint-toolchain",
            "labels": [
                "abap",
                "dependencies"
            ],
            "matchPackageNames": [
                "/^@abaplint//"
            ]
        }
    ]
}
